{% extends 'base.html.twig' %}

{% block title %}SymRecipe - Mes recettes
{% endblock %}

{% block body %}
	<div class="container mt-4">
		{% if recettes is not empty %}
			<h1>Mes recettes</h1>

			<a href="{{path('recette.new')}}" class="btn btn-primary my-2">
				Ajouter une recette
			</a>

			<div class="container mt-4">
				<div class="row g-3">

					{% for recette in recettes %}
						<div
							class="col-md-4 d-flex">

							{# card #}
							<div class="card h-100 d-flex flex-column">
								<div class="card-header bg-primary text-white">{{ recette.name }}</div>
								<div class="card-body bg-light text-center">
									<div class="d-flex flex-row align-items-center justify-content-between mb-3">

										{% if recette.time is not null %}
											<div class="d-flex flex-row align-items-center">
												<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-clock" viewbox="0 0 16 16">
													<path d="M8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71z"/>
													<path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16m7-8A7 7 0 1 1 1 8a7 7 0 0 1 14 0"/>
												</svg>
												<div class="ms-1">{{ recette.time }}
													min</div>
											</div>
										{% endif %}

										{% if recette.peopleNb is not null %}
											<div class="d-flex flex-row align-items-center">
												<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-people" viewbox="0 0 16 16">
													<path d="M15 14s1 0 1-1-1-4-5-4-5 3-5 4 1 1 1 1zm-7.978-1L7 12.996c.001-.264.167-1.03.76-1.72C8.312 10.629 9.282 10 11 10c1.717 0 2.687.63 3.24 1.276.593.69.758 1.457.76 1.72l-.008.002-.014.002zM11 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4m3-2a3 3 0 1 1-6 0 3 3 0 0 1 6 0M6.936 9.28a6 6 0 0 0-1.23-.247A7 7 0 0 0 5 9c-4 0-5 3-5 4q0 1 1 1h4.216A2.24 2.24 0 0 1 5 13c0-1.01.377-2.042 1.09-2.904.243-.294.526-.569.846-.816M4.92 10A5.5 5.5 0 0 0 4 13H1c0-.26.164-1.03.76-1.724.545-.636 1.492-1.256 3.16-1.275ZM1.5 5.5a3 3 0 1 1 6 0 3 3 0 0 1-6 0m3-2a2 2 0 1 0 0 4 2 2 0 0 0 0-4"/>
												</svg>
												<div class="ms-1">{{ recette.peopleNb }}</div>
											</div>
										{% endif %}

										{% if recette.difficulty is not null %}
											<div>Difficult√© :
												{{ recette.difficulty }}</div>
										{% endif %}

									</div>
									<span class="card-text text-justify">{{ recette.description }}</span>
								</div>
							</div>

						</div>
					{% endfor %}

				</div>
			</div>

		{% else %}
			<h4>Il n'y a aucune recette.</h4>
		{% endif %}
	</div>
{% endblock %}
